<resources>

    <!-- Application theme. -->
    <style name="AppBaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

		<!-- Main theme colors -->
		<!--   your app branding color for the app bar -->
		<item name="colorPrimary">@color/material_deep_teal_500</item>
		<!--   darker variant for the status bar and contextual app bars -->
		<item name="colorPrimaryDark">#ff007a6c</item>
		<!--   theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/material_deep_teal_500</item>

    </style>

	<!-- Application theme. -->
	<style name="AppBaseTheme.Dialog" parent="Theme.MaterialComponents.Light.NoActionBar">

		<!-- Main theme colors -->
		<!--   your app branding color for the app bar -->
		<item name="colorPrimary">@color/material_deep_teal_500</item>
		<!--   darker variant for the status bar and contextual app bars -->
		<item name="colorPrimaryDark">#004a43</item>
		<!--   theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/material_deep_teal_500</item>
	</style>

	<style name="AppTheme.Dialog" parent="AppBaseTheme.Dialog">

	</style>

	<style name="AppTheme" parent="AppBaseTheme">

	</style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>